    <h1 id="contact-h1">Contact Us</h1>
    <section id="contact-us" data-aos="fade-up">
      <form action="#" id="contact-form">
        <input type="text" placeholder="Enter Your Name" />
        <input type="email" placeholder="Enter Your Email" />
        <input type="text" placeholder="Enter Your Contact Number" />
        <input type="text" placeholder="Enter Your City" />
        <textarea
          name=""
          id="message"
          cols="30"
          rows="10"
          placeholder="Your Message"
        ></textarea>

        <button id="submit-btn">Submit</button>
      </form>
    </section>
    <section id="newsletter" data-aos="fade-up">
      <h1>Subscribe To Newsletter</h1>
    
       
        <form action="/home" method="post" id="newsletter-email">
          <img src="/ICONS/Email Doodle.png" alt="" />
          <input type="email" name="subs" placeholder="Email Address" />
          <button type="submit">Subscribe</button>
        </form>
     
    </section>
